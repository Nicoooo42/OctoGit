{
  "name": "BciGit",
  "version": "0.1.0",
  "description": "BciGit â€“ a cross-platform GitKraken-inspired client built with Electron, React, and TypeScript",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:typescript\" \"npm run dev:electron\"",
    "dev:renderer": "vite --config frontend/vite.config.ts",
    "dev:typescript": "tsc -b electron backend --watch",
    "dev:electron": "wait-on dist/electron/main.js tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build --config frontend/vite.config.ts",
    "build:electron": "tsc -b electron backend",
    "package": "npm run build && electron-builder -c electron/electron-builder.yml",
    "lint": "echo 'No linter configured yet'"
  },
  "keywords": [
    "electron",
    "react",
    "git",
    "typescript",
    "d3",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "d3": "^7.9.0",
    "electron": "^29.3.0",
    "lucide-react": "^0.428.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.10",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "wait-on": "^7.1.0"
  }
}
